@model StudentManagementSystem.Pages.Exercises.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Excercy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Excercy.ExerciseName" class="control-label"></label>
                <input asp-for="Excercy.ExerciseName" class="form-control" />
                <span asp-validation-for="Excercy.ExerciseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Excercy.Percentage" class="control-label"></label>
                <input asp-for="Excercy.Percentage" class="form-control" />
                <span asp-validation-for="Excercy.Percentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Excercy.Dateline" class="control-label"></label>
                <input asp-for="Excercy.Dateline" class="form-control" />
                <span asp-validation-for="Excercy.Dateline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Excercy.SubjectId" class="control-label"></label>
                <select asp-for="Excercy.SubjectId" class ="form-control" asp-items="ViewBag.SubjectId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
