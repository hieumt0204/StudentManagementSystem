@page
@model StudentManagementSystem.Pages.ManageClasses.DeleteModel

@{
    ViewData["Title"] = "Delete Class";
}

<h1>Delete Class</h1>

<h3>Are you sure you want to delete this class?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Class ID:
        </dt>
        <dd class="col-sm-10">
            @Model.Class.ClassId
        </dd>

        <dt class="col-sm-2">
            Class Name:
        </dt>
        <dd class="col-sm-10">
            @Model.Class.ClassClassName
        </dd>
    </dl>
    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index">Back to List</a>
    </form>
</div>